<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.fragments.WritingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_on_click"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/text_view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="30 мая"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/text_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:21"
                android:textColor="@color/just_gray" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Что нужно сделать:"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginVertical="20dp"
            android:hint="введите текст"
            android:textColor="@color/gray"
            android:textColorHint="@color/just_gray"
            android:textColorLink="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/color_button_dark_gray"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/color_btn_radius"
            app:backgroundTint="@color/dark_gray"
            tools:text="button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/color_button_light"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/color_btn_radius"
            app:backgroundTint="#EBE4C9"
            tools:text="button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/color_button_may_be_red"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/color_btn_radius"
            app:backgroundTint="#571818"
            tools:text="button" />

    </LinearLayout>

</FrameLayout>